<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:p="http://www.springframework.org/schema/p" xmlns:c="http://www.springframework.org/schema/c"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                                 http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- JDBC -->
    <beans:bean class="org.springframework.jdbc.datasource.DriverManagerDataSource"
                id="dataSource" p:driverClassName="oracle.jdbc.OracleDriver"
                p:url="jdbc:oracle:thin:@15.165.146.31:1521:XE" p:username="kosa"
                p:password="java"/>

    <beans:bean id="sqlSessionFactoryBean"
                class="org.mybatis.spring.SqlSessionFactoryBean"
                p:dataSource-ref="dataSource"
                p:mapperLocations="classpath*:mybatis/mapper/userMapper.xml"/>

    <beans:bean id="sqlSession"
                class="org.mybatis.spring.SqlSessionTemplate"
                c:sqlSessionFactory-ref="sqlSessionFactoryBean"/>

    <beans:bean id="transactionManager"
                class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
                p:dataSource-ref="dataSource"/>
</beans:beans>